#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find ~/Projects ~/vpn  ~/.dotfiles /etc/nixos -mindepth 1 -maxdepth 1 | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

# If selected is a file, get its parent directory
if [[ -f $selected ]]; then
    selected=$(dirname "$selected")
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
    # Window 1: nvim (left 2/3) + claude (right 1/3)
    tmux send-keys -t $selected_name:1 'nvim' Enter
    # tmux split-window -t $selected_name:1 -h -p 33 -c $selected
    # tmux send-keys -t $selected_name:1 'claude' Enter
    tmux select-pane -t $selected_name:1.0
    # Window 2: shell (top) + git status (bottom)
    tmux new-window -t $selected_name -c $selected
    tmux split-window -t $selected_name:2 -v -p 75 -c $selected
    tmux select-pane -t $selected_name:2.0
    tmux select-window -t $selected_name:1
fi

if [[ -z $TMUX ]]; then
    echo $selected_name
    tmux attach-session -t $selected_name
else
    tmux switch-client -t $selected_name
fi
